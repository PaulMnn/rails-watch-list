<h1>New Bookmark</h1>

<%= form_with model: [@list, @bookmark], local: true do |form| %>
  <div>
    <%= form.label :movie_id %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title %>
  </div>
  <div>
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>
  <div>
    <%= form.submit 'Create Bookmark' %>
  </div>
<% end %>

<%= link_to 'Back to List', @list %>
